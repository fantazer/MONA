include block_html/_style.pug
include block_html/_include.pug

.page
	+header()
	.content
		.section.section--clear
			.main-cont
				.bread
					-
						var items = ['Главная','Категория','Страница'];
					each item in items
						a(href="#").bread__el #{item}
				.section-title-row
					.section-title
						span Гостиная Абриола
						.section-title-line
					.section-title-sub Как выглядит ваш комфорт

				.item
					.item-slider
						.slider--arrows
							.slider-wrap
								.slider-control.slider-control--left
									+icon("arrow-left","icon")
								.slider-control.slider-control--right
									+icon("arrow-right","icon")
								.content-slider.slider-item
									- for (var i=0;i<4;i++)
										.content-slider__el-cont
											.content-slider__el(style="background-image:url('img/main-slider-1.jpg')")
					.item-content
						.item-price Цена: 200 000 руб.
						.item-callback
							.item-callback-text Позвоните нам!
							a(href="tel:8 383 000 00 00").item-callback-text 8 383 000 00 00
							a(href="tel:8 383 000 00 00").item-callback-text 8 383 000 00 00
							a(href="tel:8 383 000 00 00").item-callback-text 8 383 000 00 00

						.item-get
							.btn--md.btn--full Заказать звонок
							.btn--md.btn--mark Заказать расчет проекта

						.item-designer Дизайнер:
							a(href="#") Имя Фамилия

		.section.section--dark
			.main-cont
				.section-title.section-title--sm Характеристики
				.item-config
					.book-row
						.book-row__title Материал фасада
						.book-row__dot
						.book-row__value Cleaf
					.book-row
						.book-row__title Столешница
						.book-row__dot
						.book-row__value Искусственный акриловый камень LG Hi-Macs
					.book-row
						.book-row__title Мойка
						.book-row__dot
						.book-row__value Искусственный акриловый камень LG Hi-Macs
					.book-row
						.book-row__title Мойка
						.book-row__dot
						.book-row__value Искусственный акриловый камень LG Hi-Macs
					.book-row
						.book-row__title Фурнитура
						.book-row__dot
						.book-row__value Blum

		.section
			.main-cont
				.section-title-row
					.section-title
						span Похожие товары
						.section-title-line
				.slider-wrap
					.slider-control.slider-control--left
						+icon("arrow-left","icon")
					.slider-control.slider-control--right
						+icon("arrow-right","icon")
					.slider-items.slider-extend.slider-item
						- for (var i=0;i<6;i++)
							.catalog__el-wrap
								a(href="#").catalog__el
									.catalog__el-img(style="background-image:url('img/item-5.jpg')")
									.catalog__el-content
										.catalog__el-title.catalog__el-title--simple Классические кухни


	+footer()
include ./block_html/_script.pug
