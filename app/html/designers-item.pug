			.section
				.main-cont
					.section-title-row
						.section-title
							span Портфолио
							.section-title-line
					.slider-wrap
						.slider-control.slider-control--left
							+icon("arrow-left","icon")
						.slider-control.slider-control--right
							+icon("arrow-right","icon")
						.slider-items.slider-extend.slider-item
							- for (var i=0;i<6;i++)
								.catalog__el-wrap
									a(href="#").catalog__el
										.catalog__el-img(style="background-image:url('img/item-3.jpg')")
										.catalog__el-content
											.catalog__el-title.catalog__el-title--simple Классические кухни
	+footer()
